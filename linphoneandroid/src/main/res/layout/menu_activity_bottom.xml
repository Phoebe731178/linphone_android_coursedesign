<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:color="#7adfb8">
              //android:background="@drawable/bottom_bar"

    <LinearLayout
            android:id="@+id/ll_dial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

        <ImageView
                android:id="@+id/iv_dial"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:src="@mipmap/tap_dial"/>

        <TextView
                android:id="@+id/tv_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="拨号"
                android:textColor="#7adfb8"
                android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

        <ImageView
                android:id="@+id/iv_address"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:src="@mipmap/tab_address_normal"/>

        <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="联系人"
                android:textColor="#ffffff"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

        <ImageView
                android:id="@+id/iv_message"
                android:layout_width="96dp"
                android:layout_height="66dp"
                android:src="@mipmap/tab_message"/>

        <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="消息"
                android:textColor="#ffffff"
                android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>